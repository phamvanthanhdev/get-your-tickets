<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.getyourtickets.mapper.LogoutMapper">
    <resultMap id="logoutResultMap" type="com.getyourtickets.model.Logout">
        <result property="id" column="id"/>
        <result property="jwtId" column="jwt_id"/>
        <result property="token" column="token"/>
        <result property="expiredTime" column="expired_time"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <select id="getLogoutByJwtId" parameterType="java.lang.String" resultMap="logoutResultMap">
        SELECT *
        FROM logout
        WHERE jwt_id = #{jwtId}
        LIMIT 1
    </select>

    <insert id="insertLogout" parameterType="java.util.Map">
        INSERT INTO logout (jwt_id, token, expired_time)
        VALUES (#{jwtId}, #{token}, #{expiredTime})
    </insert>
</mapper>
