<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.getyourtickets.mapper.RoleMapper">
    <resultMap id="roleMap" type="com.getyourtickets.model.Role">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
    </resultMap>

    <select id="getAllRoles" resultMap="roleMap">
        SELECT * FROM roles
    </select>

    <select id="getRolesByUserId" parameterType="java.lang.Integer" resultMap="roleMap">
        SELECT r.*
        FROM roles r
        INNER JOIN user_roles ur ON r.id = ur.role_id
        WHERE ur.user_id = #{userId}
    </select>
</mapper>